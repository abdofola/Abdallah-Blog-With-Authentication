extends layout

block content
  .article
    h1 Add article
    //- form(action="/article/edit/"+article._id, method="post")
    .form-group
      label Title
      input.form-control(type="text" name="title", value=article.title)
    .form-group
      label Content
      textarea.form-control(rows="4" name="content") #{article.content}
    .form-group    
      input.btn.btn-warning.update(type="submit")
      input.hidden(type="hidden", name="id", value=article.id)
